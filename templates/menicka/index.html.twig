{# templates/menicka/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Hello MenickaController!
{% endblock %}

{% block body %}
	<h1>Aktualni Menicka</h1>
	<ul>
		{% for menicka in data %}
			<li>
				<strong>ID:</strong>
								{{ menicka.id }}<br>
				<strong>Datum:</strong>
				{{ menicka.datum|date('Y-m-d') }}<br>
				<strong>Polozky:</strong>
				<ul>
					{% for polozka in menicka.polozkaMenicka %}
						<li>{{ polozka.jidla.nazev }}
							(Cena:
							{{ polozka.jidla.cena }})
							(ID:
							{{ polozka.id }})
							</li>
							<button onClick="remove({{ polozka.id }})">Remove</button>
					{% endfor %}
				</ul>
					<strong>Spr√°va: </strong>
					<button onClick="edit({{ menicka.id }})">Edit</button>
					<button onClick="remove({{ menicka.id }})">Odebrat</button>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
